  "bin": {
    "utility": "src/cli.ts"
  },
  "dependencies": {
    "commander": "6.2.0",
    "cssstats": "^3.4.1",
    "deepmerge": "^4.2.2",
    "lodash": "^4.17.20",
    "postcss": "7.0.26"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "open": "^7.3.0",
    "postcss-cli": "^8.2.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
